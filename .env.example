# =============================================================================
# SecureAgent Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!
# =============================================================================

# =============================================================================
# AI Providers (at least one required)
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# OpenAI (GPT-4, etc.)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_ORG_ID=

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-pro

# OpenRouter (Multi-provider routing)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=auto

# Ollama (Local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# Budget Controls
# =============================================================================

# Daily budget in cents (default: $100/day = 10000 cents)
AI_DAILY_BUDGET_CENTS=10000

# Monthly budget in cents (default: $2000/month = 200000 cents)
AI_MONTHLY_BUDGET_CENTS=200000

# Alert thresholds (percentages, comma-separated)
AI_BUDGET_ALERT_THRESHOLDS=50,75,90,100

# Rate limiting
AI_RATE_LIMIT_REQUESTS_PER_MINUTE=60
AI_RATE_LIMIT_TOKENS_PER_MINUTE=100000

# Loop detection
AI_LOOP_DETECTION_ENABLED=true
AI_LOOP_DETECTION_MAX_SIMILAR=5

# =============================================================================
# Channel Integrations
# =============================================================================

# Discord
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=your-guild-id
DISCORD_WEBHOOK_URL=

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_WEBHOOK_URL=

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=

# WhatsApp (Meta Business API)
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# Signal
SIGNAL_PHONE_NUMBER=+1234567890
SIGNAL_API_URL=http://localhost:8080

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# Security
# =============================================================================

# Encryption key (32 bytes / 256 bits, base64 encoded)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=your-256-bit-encryption-key-base64-encoded

# JWT secret (for session tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-at-least-256-bits

# JWT expiration
JWT_EXPIRES_IN=1d

# PASETO keys (optional, for enhanced security)
PASETO_SECRET_KEY=
PASETO_PUBLIC_KEY=

# Session settings
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Trusted proxies
TRUST_PROXY=false

# =============================================================================
# Database
# =============================================================================

# SQLite (default)
DATABASE_PATH=./data/secureagent.db

# PostgreSQL (optional, for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/secureagent

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Enterprise Features
# =============================================================================

# Stripe (for billing)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PRO=price_pro_monthly
STRIPE_PRICE_ID_BUSINESS=price_business_monthly
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_monthly

# Google SSO
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft SSO (Azure AD / Entra ID)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-tenant-id

# SAML (generic)
SAML_ENTRY_POINT=https://idp.example.com/sso
SAML_ISSUER=secureagent
SAML_CERT=

# Multi-tenant
TENANT_ISOLATION=true
DEFAULT_TENANT_TIER=free

# =============================================================================
# Observability
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# Audit log path
AUDIT_LOG_PATH=/var/log/secureagent/audit.log

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=secureagent

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# Healthcare/ABA Module (Optional)
# =============================================================================

# Enable HIPAA compliance mode
HIPAA_MODE=false

# Audit log retention (days)
HEALTHCARE_AUDIT_RETENTION_DAYS=2555

# Encryption algorithm for PHI
HEALTHCARE_ENCRYPTION_ALGORITHM=aes-256-gcm

# Insurance verification API
INSURANCE_VERIFICATION_API_KEY=

# Billing/Claims API
CLAIMS_CLEARINGHOUSE_API_KEY=

# =============================================================================
# Trading Module (Optional)
# =============================================================================

# Trading mode (paper or live)
# IMPORTANT: Start with paper mode!
TRADING_MODE=paper

# Alpaca (US stocks)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_PAPER=true

# Interactive Brokers
IB_GATEWAY_HOST=127.0.0.1
IB_GATEWAY_PORT=4001
IB_CLIENT_ID=1

# Crypto exchanges
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key

COINBASE_API_KEY=your-coinbase-api-key
COINBASE_SECRET_KEY=your-coinbase-secret-key

# Risk limits
TRADING_MAX_POSITION_SIZE=10000
TRADING_MAX_DAILY_LOSS=1000
TRADING_MAX_DRAWDOWN_PERCENT=5

# =============================================================================
# Application Settings
# =============================================================================

# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# API versioning
API_VERSION=v1

# Feature flags
FEATURE_HEALTHCARE=true
FEATURE_TRADING=true
FEATURE_ENTERPRISE=true
FEATURE_CONTENT_CREATOR=true

# Webhook URL (for receiving events)
WEBHOOK_URL=https://yourdomain.com/webhooks

# =============================================================================
# Development Only
# =============================================================================

# Enable debug mode
DEBUG=false

# Skip auth for local development (NEVER in production!)
SKIP_AUTH=false

# Mock external services
MOCK_EXTERNAL_SERVICES=false
