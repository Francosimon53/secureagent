{
  "version": 2,
  "builds": [
    {
      "src": "api/agent.ts",
      "use": "@vercel/node",
      "config": { "maxDuration": 60 }
    },
    {
      "src": "api/browser.ts",
      "use": "@vercel/node",
      "config": { "maxDuration": 60 }
    },
    {
      "src": "api/!(agent|browser).ts",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.ts"
    },
    {
      "src": "/api/skill/execute",
      "dest": "/api/skill.ts?path=execute"
    },
    {
      "src": "/api/skill",
      "dest": "/api/skill.ts"
    },
    {
      "src": "/api/enterprise",
      "dest": "/api/enterprise.ts"
    },
    {
      "src": "/api/agent",
      "dest": "/api/agent.ts"
    },
    {
      "src": "/api/browser",
      "dest": "/api/browser.ts"
    },
    {
      "src": "/api/telegram",
      "dest": "/api/telegram.ts"
    },
    {
      "src": "/api/heartbeat",
      "dest": "/api/heartbeat.ts"
    },
    {
      "src": "/api/whatsapp",
      "dest": "/api/whatsapp.ts"
    },
    {
      "src": "/api/discord",
      "dest": "/api/discord.ts"
    },
    {
      "src": "/api/slack",
      "dest": "/api/slack.ts"
    },
    {
      "src": "/api/google-chat",
      "dest": "/api/google-chat.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/heartbeat",
      "schedule": "0 7,12,18 * * *"
    }
  ]
}
